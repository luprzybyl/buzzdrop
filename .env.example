# Flask Secret Key (REQUIRED for production)
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
FLASK_SECRET_KEY=your-secret-key-here-change-this-in-production

# User Management
# Format: FLASK_USER_N=username:password:is_admin
# Passwords are hashed automatically using PBKDF2-SHA256
FLASK_USER_1=admin:password:true
# FLASK_USER_2=user1:pass123:false
# FLASK_USER_3=user2:pass456:false 

# Upload configuration
UPLOAD_FOLDER=uploads
ALLOWED_EXTENSIONS=txt,pdf,png,jpg,jpeg,gif,doc,docx,xls,xlsx,mp4
MAX_CONTENT_LENGTH=104857600

# Database configuration
DATABASE_PATH=db.json


STORAGE_BACKEND=local # or s3
S3_BUCKET=bucketname
S3_ACCESS_KEY=youraccesskey
S3_SECRET_KEY=yoursecretkey
S3_REGION=eu-central-1
